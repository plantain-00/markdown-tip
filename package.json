{
  "name": "markdown-tip",
  "version": "2.0.1",
  "description": "A markdown tip component.",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc -p src && tsc -p demo",
    "tslint": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "rev-static": "rev-static --config demo/rev-static.config.js",
    "webpack": "webpack --config demo/webpack.config.js",
    "cleancss": "cleancss -o dist/markdown-tip.min.css dist/markdown-tip.css && cleancss -o demo/index.bundle.css dist/markdown-tip.min.css ./node_modules/github-fork-ribbon-css/gh-fork-ribbon.css",
    "clean": "rimraf dist && rimraf demo/*.bundle-*.js",
    "build": "npm run clean && npm run cpy && npm run file2variable && npm run tsc && npm run webpack && npm run cleancss && npm run rev-static",
    "lint": "npm run tslint",
    "file2variable": "file2variable-cli src/vue.template.html -o src/vue-variables.ts --html-minify && file2variable-cli src/angular.template.html -o src/angular-variables.ts --html-minify",
    "cpy": "cpy src/markdown-tip.css dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/markdown-tip.git"
  },
  "author": "York Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plantain-00/markdown-tip/issues"
  },
  "homepage": "https://github.com/plantain-00/markdown-tip#readme",
  "devDependencies": {
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@types/react": "15.0.25",
    "@types/react-dom": "15.5.0",
    "clean-css-cli": "4.1.3",
    "core-js": "2.4.1",
    "cpy-cli": "1.0.1",
    "file2variable-cli": "1.3.0",
    "github-fork-ribbon-css": "0.2.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "rev-static": "2.4.2",
    "rimraf": "2.6.1",
    "rxjs": "5.4.0",
    "tslint": "5.4.0",
    "typescript": "2.4.0",
    "vue": "2.3.3",
    "vue-class-component": "5.0.1",
    "webpack": "2.6.1",
    "zone.js": "0.8.11"
  },
  "dependencies": {
    "tslib": "1"
  }
}
